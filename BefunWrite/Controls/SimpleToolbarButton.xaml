<UserControl x:Class="BefunWrite.Controls.SimpleToolbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BefunWrite.Controls" 
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="SimpleToolbarButtonTheme.xaml"/>
    </UserControl.Resources>

    <Button Name ="btn" Command="Save" Margin="1, 0">
        <StackPanel Orientation="Horizontal" >
            <local:AutoGreyableImage x:Name="img"/>
            <TextBlock Name="txt" Margin="5, 0, 0, 0"/>
        </StackPanel>
    </Button>
</UserControl>
